<header>
   <%= render 'shared/hero_image' %>
   
    <div class="image-trans">
        <div class="container col-md-offset-2 col-md-8">
            <div id="planner" data-controller="nearby-form">
                <h1> Let's plan your wild fishing trip 🐟🏔🥾🗺🏕🦌  </h1>
                <div class="flex-container">
                    <div class="form-group">
                        <p class="title"><strong>Where are you starting your trip from?</p></strong>
                        <button data-controller="current-location" data-action="click->current-location#submit" type="button" class="btn btn-primary"><span class="glyphicon glyphicon-map-marker" aria-hidden="true"></span> Use my current location</button>
                        <br /> 
                        <label for="postcode">Postcode</label><br>
                        <input type="text" data-nearby-form-target="postcode" id="postcode" name="postcode" class="form-control">
                        <span class="error"></span>
                    </div>
                </div>
                <div class="create-my-trip">
                    <button type="submit" class="btn btn-warning btn-lg" data-action="click->nearby-form#submit">Find me some wild waters</button>
                </div>
            </div>
            <% if @water.hero_image.present? && @water.hero_image.attribution.present? %>
                <div class="attribution">
                    Image &copy; Copyright
                    <a href="<%= @water.hero_image.attribution['profile_url'] %>"><%= @water.hero_image.attribution['name'] %></a>
                    and licensed for reuse under this
                    <a href="<%= @water.hero_image.attribution['licence'] %>">Creative Commons Licence</a>.
                    <a href="<%= @water.hero_image.attribution['photo_url']%>">More information about this image at Geograph</a>.
                </div>
            <% end %>
        </div>
    </div>
</header>

