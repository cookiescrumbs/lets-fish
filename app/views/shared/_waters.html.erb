<% if !locals[:waters].nil? && locals[:waters].exists? %>
    <% locals[:waters].each do | water | %>
        <div class="simple-card col-md-4 col-sm-12">
            <a href="<%= fishery_water_path water.fishery, water %>" class="explore-link" >
                <% image_styles = (water.hero_image.present?)? '' : 'missing-image max-width-54 p-top5 p-bottom5' %>
                <% 
                    image_src = (water.hero_image.present?)? water.hero_image.image.path(:original): '/images/missing.png'
                    image_src = "https://#{Rails.application.config.imgix[:source]}#{image_src}"
                %> 
                <img src="<%= image_src %>?fit=crop&q=0&w=650&h=350" class="img-responsive img-centered <%= image_styles %>" alt="<%= water.name %>">
            <div class="caption" data-controller="nearby-distance">
                <div data-nearby-distance-target="address" data-latlng="<%= water.latitude %>,<%= water.longitude %>" data-location="<%= @location %>"></div>
                <h4><%= water.name %></h4>
                <p class="text-muted"><%= water.short_address %></p>
                <span data-nearby-distance-target="message"></span>
            </div>
            </a>
        </div>
    <% end %>
<% end %>
